strong {
  font-weight: bold;
  color: #DA5961;
}

table {
    border-collapse: collapse;
    margin: 0 auto;
    display: block;
    overflow-x: auto;
    width 50%;
}

.line-numbers-mode pre {
  padding-left: 1.5rem !important;
}

.line-numbers-wrapper {
  display: none !important;
}

.line-numbers-mode:after {
  display: none;
}

.highlighted:before {
  display: none !important;
}

.theme-default-content, .page-nav, .page-edit {
  max-width: 1080px !important;
}

.theme-default-content code {
  background: rgba(255, 229, 100, 0.2);
  color: #1a1a1a;
}

@media screen and (max-width: 1080px) {
  .theme-container.sidebar-open .sidebar {
    transform: translateX(0);
  }

  .sidebar {
    top: 0;
    padding-top: 3.6rem;
    transform: translateX(-100%);
    transition: transform 0.2s;
  }

  .sidebar-button {
    display: block !important;
  }

  .page {
    padding-left: 0;
  }

  .navbar {
    padding-left: 4rem !important;
  }

  .navbar .site-name {
    width: calc(100vw - 9.4rem);
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
  }

  #app > div.theme-container > header > div.links {
    max-width: 1626px !important;
  }
}

body {
  font-family: -apple-system, BlinkMacSystemFont, Noto Sans CJK SC, Arial, Helvetica Neue !important;
}

code, kbd, .line-number {
  font-family: JetBrains Mono, source-code-pro, Menlo, Monaco, Consolas, 'Courier New', monospace;
}

p img {
  margin: auto;
  display: block;
}

p, ul, ol {
  color: black !important;
}

blockquote {
  background-color: #fff9f9;
  border-left-color: #DA5961;
  border-left-width: 6px;
  border-left-style: solid;
  padding: 20px 45px 20px 26px;
}

